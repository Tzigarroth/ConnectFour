package cosc405.bo;

import java.util.Random;

import cosc405.main.Minimax;

public class Player {

	Board board;
	boolean ourTurn;
	boolean gameOver;
	Minimax minimax;

	public Player() {
		this.board = new Board();
		this.ourTurn = true;
		this.gameOver = false;
		this.minimax = new Minimax();
	}

	public Board initialPlay(Board board) {
		Random rand = new Random();
		board.addPiece(rand.nextInt() % 7, true);
		return board;
	}

	public Board play(int num, Board board) {

		int decision = minimax.minimax(board.getState(), 0, 0).getDecision();
		board.addPiece(decision, true);
		return board;

	}

}
